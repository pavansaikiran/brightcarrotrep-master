<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".VehicleDisplayActivity">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.9"
            android:layout_margin="8dp"
            android:background="@drawable/roundbuttonyellow"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:id="@+id/backvehicledisplay"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" TS08FN4860"
                android:fontFamily="@font/acme"
                android:id="@+id/vehicledisplayheading"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/backvehicledisplay"
                android:background="@drawable/roundbuttonyellow"
                android:textColor="#000000"
                android:textSize="25sp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EDIT"
                android:fontFamily="@font/acme"
                android:id="@+id/editvehfill"
                android:textColor="#000000"
                android:textSize="25sp"
                android:layout_centerVertical="true"
                android:textAlignment="textEnd"
                android:layout_marginRight="15dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/vehiclefillingheading"/>




        </RelativeLayout>

        <ImageView
            android:id="@+id/imvehdisp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1.3"
            android:src="@drawable/background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:layout_weight="1">
        <TextView
            android:id="@+id/namevehdisp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:fontFamily="@font/acme"
            android:text="honda activa 4g 110cc"
            android:textStyle="bold"
            android:textColor="#ffffff"

            android:textAllCaps="true"

            />

        <TextView
            android:id="@+id/colorvehdisp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:textColor="#ffffff"
            android:textAllCaps="true"
            android:text="Color    :      Red "
            android:fontFamily="@font/acme"/>

        <TextView
            android:id="@+id/fuelvehdisp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:text="Fuel Used    :      Petrol"
            android:fontFamily="@font/acme"/>

        <TextView
            android:id="@+id/dopvehdisp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:textAllCaps="true"
            android:layout_margin="10dp"
            android:text="Date Of Purchase    :      21/08/99 "
            android:fontFamily="@font/acme"/>

        <TextView
            android:id="@+id/kmsvehdisp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:textAllCaps="true"
            android:layout_margin="10dp"
            android:text="Number of KMS    :     15000 "
            android:fontFamily="@font/acme"/>


        <TextView
            android:id="@+id/psdvehdisp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:textAllCaps="true"
            android:layout_margin="10dp"
            android:text="Previously Serviced Date    :      22/08/99 "
            android:fontFamily="@font/acme"/>


        </LinearLayout>


















    </LinearLayout>

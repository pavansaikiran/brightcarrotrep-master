<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.v7.widget.CardView
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        android:layout_margin="10dp"
        android:layout_width="320dp"
        android:layout_height="120dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/myvehcircimage"
                    android:src="@drawable/background"
                    android:layout_margin="3dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:text="4/5"
                    android:id="@+id/myvehrating"
                    android:fontFamily="@font/acme"
                    android:drawableLeft="@drawable/ic_star_border_black_24dp"
                    android:padding="2dp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:layout_weight="3"/>



            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:text="type"
                    android:id="@+id/myvehtype"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/acme"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/myvehname"
                    android:text="name"
                    android:layout_margin="5dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/acme"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/myvehnum"
                    android:text="number"
                    android:textStyle="bold|italic"
                    android:background="@drawable/roundbuttonyellow"
                    android:layout_margin="5dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/acme"
                    android:layout_weight="1"/>



            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
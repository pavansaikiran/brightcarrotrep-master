<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.v7.widget.CardView
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="120dp">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/parentlayout"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="center"
                android:orientation="vertical">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:id="@+id/dpid"
                    android:layout_margin="9dp"
                    android:layout_height="match_parent"
                    android:src="@color/colorPrimary"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/dateid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="27jan-31jan"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/acme"
                    android:layout_weight="3"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_star_border_black_24dp"
                        android:layout_toLeftOf="@id/ratingid"/>
                <TextView
                    android:id="@+id/ratingid"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"

                    android:text="4.5/5"
                    android:drawablePadding="2dp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/acme"

                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:fontFamily="@font/acme"
                    android:textSize="18sp"
                    android:layout_margin="3dp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:maxLines="1"
                    android:textAllCaps="true"
                    android:id="@+id/nameid"
                    android:text="Vehiclename"/>

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_margin="5dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/acme"
                    android:textStyle="bold"
                    android:id="@+id/descid"
                    android:text="Bla bla bla vla bla bla bla bla bla bla ablbal"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textStyle="italic|bold"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:fontFamily="@font/acme"
                    android:id="@+id/priceid"
                    android:text="1000/- per hour"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Complete details"
                    android:textStyle="italic"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/acme"
                    android:textSize="15sp"
                    android:id="@+id/vehinumber"
                    android:background="@drawable/roundbuttonyellow"
                    android:gravity="center"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="match_parent"
                    android:id="@+id/line"
                    android:layout_height="1dp"
                    android:background="#D3D3D3"
                    />


            </LinearLayout>












        </LinearLayout>






    </android.support.v7.widget.CardView>

</LinearLayout>
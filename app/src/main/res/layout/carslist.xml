<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.v7.widget.CardView
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="250dp">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:orientation="vertical">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:id="@+id/dpid"
                    android:layout_height="match_parent"
                    android:src="@color/colorPrimary"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/dateid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="27jan-31jan"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/acme"
                    android:layout_weight="3"/>

                <TextView
                    android:id="@+id/ratingid"
                    android:paddingLeft="30dp"
                    android:drawableLeft="@drawable/ic_star_border_black_24dp"
                    android:text="4.5/5"
                    android:drawablePadding="5dp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/acme"
                    android:paddingTop="5dp"
                    android:textSize="19sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp"
                    android:textSize="22sp"
                    android:textColor="@color/colorPrimary"
                    android:maxLines="1"
                    android:textAllCaps="true"
                    android:id="@+id/nameid"
                    android:text="Name of the Vehicle"/>

                <TextView
                    android:layout_width="match_parent"
                    android:maxLines="2"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:id="@+id/descid"
                    android:text="Bla bla bla vla bla bla bla bla bla bla ablbal"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:textStyle="italic"
                    android:textSize="20sp"
                    android:id="@+id/priceid"
                    android:text="1000/- per hour"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="match_parent"
                    android:id="@+id/line"
                    android:layout_height="1dp"
                    android:background="#D3D3D3"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Complete details"
                    android:textSize="19sp"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:layout_weight="1"/>


            </LinearLayout>












        </LinearLayout>






    </android.support.v7.widget.CardView>

</LinearLayout>